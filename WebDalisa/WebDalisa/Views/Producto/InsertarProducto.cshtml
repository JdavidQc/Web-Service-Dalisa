<style>
    .thumb {
        width: 200px;
        height: 200px;
        border: 1px solid #000;
        margin: 10px 5px 0 0;
    }

    .inputfile-1 + label {
        color: #fff;
        background-color: #c39f77;
    }

    /**********File Inputs**********/

    .inputfile {
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
        overflow: hidden;
        position: absolute;
        z-index: -1;
    }

        .inputfile + label {
            max-width: 80%;
            font-size: 1.25rem;
            font-weight: 700;
            text-overflow: ellipsis;
            white-space: nowrap;
            cursor: pointer;
            display: inline-block;
            overflow: hidden;
            padding: 0.625rem 1.25rem;
        }

            .inputfile + label svg {
                width: 1em;
                height: 1em;
                vertical-align: middle;
                fill: currentColor;
                margin-top: -0.25em;
                margin-right: 0.25em;
            }

    .iborrainputfile {
        font-size: 16px;
        font-weight: normal;
        font-family: 'Lato';
    }

    .inputfile-1:focus + label,
    .inputfile-1.has-focus + label,
    .inputfile-1 + label:hover {
        background-color: #9f8465;
    }


    .titulo {
        text-align: center;
        color: white;
        font-size: 5em;
        transition: 0.5s;
        color: rgb(20, 125, 196);
        font-family: 'Oswald', sans-serif;
        text-shadow: 0 1px 0 #ccc, 0 2px 0 #ccc, 0 3px 0 #ccc, 0 4px 0 #ccc, 0 5px 0 #ccc, 0 6px 0 #ccc, 0 7px 0 #ccc, 0 8px 0 #ccc, 0 9px 0 #ccc, 0 10px 0 #ccc, 0 11px 0 #ccc, 0 12px 0 #ccc, 0 20px 30px rgba(0, 0, 0, 0.5);
    }

    .btn1 {
        position: relative;
        display: block;
        border-radius: 6px;
        text-align: center;
        font-weight: bold;
        width: 150px;
        height: 65px;
        overflow: hidden;
        cursor: pointer;
        letter-spacing: 2px;
        box-shadow: inset 0 0 0 3px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        transition: all ease 0.5s;
        background: rgb(20, 125, 196);
    }

        .btn1:after,
        .btn1:before {
            width: 80px;
            height: 200px;
            content: '';
            display: block;
            background: rgba(255, 255, 255, 0.5);
            transform: rotate(45deg);
            top: -60px;
            position: absolute;
            transition: none;
            right: -45%;
            cursor: pointer;
        }

        .btn1:before {
            left: -48%;
        }

        .btn1:hover {
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);
            background: rgb(20, 125, 196);
        }

            .btn1:hover:after,
            .btn1:hover:before {
                transform: rotate(45deg), scaleX(130%);
                background: rgba(255, 255, 255, 0.1);
                transition: all ease 0.5s;
            }

            .btn1:hover:after {
                right: 130%;
            }

            .btn1:hover:before {
                left: 130%;
            }
</style>


@Scripts.Render("~/Content/Index.js")

